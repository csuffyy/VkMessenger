<UserControl
    x:Class="Messenger.Wpf.Views.DialogControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviours="clr-namespace:Messenger.Wpf.Views.Behaviours"
    xmlns:command="http://www.galasoft.ch/mvvmlight"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:Messenger.Wpf.Views"
    x:Name="UserControl"
    d:DesignHeight="300"
    d:DesignWidth="300"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition
                Height="Auto"
                MinHeight="65"
                MaxHeight="120" />
        </Grid.RowDefinitions>

        <ScrollViewer
            Grid.RowSpan="2"
            views:ScrollingHelper.AutoScroll="{Binding IsMessageInComing}"
            HorizontalScrollBarVisibility="Disabled"
            VerticalScrollBarVisibility="Visible">
            <ItemsControl ItemsSource="{Binding Messages}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical" />
                    </ItemsPanelTemplate>

                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>

                    <DataTemplate>

                        <materialDesign:Card
                            Width="Auto"
                            Margin="5"
                            Padding="22,12,22,12"
                            HorizontalAlignment="{Binding ImageUrl, Converter={StaticResource CardAlignmentConverter}}"
                            UniformCornerRadius="6">
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <Image
                                        Width="30"
                                        Height="30"
                                        HorizontalAlignment="Left"
                                        Source="{Binding ImageUrl}">
                                        <Image.Clip>
                                            <EllipseGeometry
                                                Center="15,15"
                                                RadiusX="15"
                                                RadiusY="15" />
                                        </Image.Clip>
                                    </Image>
                                    <TextBlock Text="{Binding Timestamp}" />

                                    <TextBlock
                                        MaxWidth="210"
                                        Margin="5,0,0,0"
                                        TextWrapping="Wrap">

                                        <i:Interaction.Behaviors>
                                            <behaviours:EmojiTextBehavior Condition="{Binding HasEmoji}" DataObject="{Binding Message}" />
                                        </i:Interaction.Behaviors>
                                    </TextBlock>

                                </StackPanel>
                                <Image
                                   Stretch="None"
                                    HorizontalAlignment="Center"
                                    RenderOptions.BitmapScalingMode="Fant"
                                    Source="{Binding Sticker}">

                                </Image>
                                <ItemsControl ItemsSource="{Binding Photos}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Vertical" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                               
                                                <Image
                                                  Margin="2 2 2 0"
                                                  Source="{Binding}">

                                                    <Image.Style>
                                                        <Style TargetType="Image">
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Cursor" Value="Hand" />
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Image.Style>
                                                </Image>
                                            </Grid>

                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>

                        </materialDesign:Card>

                    </DataTemplate>

                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </ScrollViewer>

        <Grid
            Grid.Row="2"
            Height="Auto"
            Margin="20,0,20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBox
                Grid.Column="1"
                Margin="12,0,0,0"
                HorizontalContentAlignment="Stretch"
                VerticalContentAlignment="Stretch"
                BorderBrush="{x:Null}"
                BorderThickness="0"
                MaxLength="3000"
                Text="{Binding Body, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                TextWrapping="Wrap">
                <TextBox.InputBindings>
                    <KeyBinding
                        Key="Enter"
                        Command="{Binding SendMessage}"
                        Modifiers="Control" />
                </TextBox.InputBindings>
            </TextBox>

            <Button
                x:Name="SendButton"
                Grid.Row="0"
                Grid.Column="2"
                Width="20"
                Height="20"
                Margin="20,22,0,23"
                Padding="0,-1,0,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                VerticalContentAlignment="Stretch"
                BorderThickness="0"
                Command="{Binding LoadNext}"
                Style="{DynamicResource MaterialDesignFloatingActionMiniButton}">
                <materialDesign:PackIcon VerticalAlignment="Center" Kind="ArrowRight" />
            </Button>
            <Button
                Grid.Column="0"
                Width="20"
                Height="20"
                Margin="2,0,0,0"
                Padding="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                BorderThickness="0"
                Command="{Binding LoadPrevious}"
                Style="{DynamicResource MaterialDesignFloatingActionMiniButton}">
                <materialDesign:PackIcon HorizontalAlignment="Center" Kind="ArrowLeft" />
            </Button>
        </Grid>
    </Grid>
</UserControl>
